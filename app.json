{
  "expo": {
    "name": "icare-reminder",
    "slug": "icare-reminder",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icons/ios-light.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image":"./assets/icons/splash-icon-light.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.shahd2.icarereminder",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSCameraUsageDescription": "Allow iCare to scan medicine labels.",
        "NSLocationWhenInUseUsageDescription": "iCare uses your location to suggest nearby pharmacies."
      },
      "icon": {
        "light": "./assets/icons/ios-light.png",
        "dark": "./assets/icons/ios-dark.png",
        "tinted": "./assets/icons/ios-tinted.png"
      }
    },
    "android": {
     "adaptiveIcon": {
     "foregroundImage": "./assets/icons/adaptive-icon.png",
     "backgroundColor": "#FFFFFF"
     },
      "edgeToEdgeEnabled": true,
      "package": "com.shahd2.icarereminder",
       "permissions": ["CAMERA", "READ_EXTERNAL_STORAGE", "android.permission.POST_NOTIFICATIONS"],
       "minSdkVersion": 26
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-font",
      ["expo-notifications", {
        "icon": "./assets/icons/ios-light.png",
        "color": "#0D315B",
        "sounds": []
      }]
    ],
    "extra": {
      "eas": {
        "projectId": "62a1ffc3-a9e6-4280-aa38-33a157da1d37"
      }
    }
  }
}
